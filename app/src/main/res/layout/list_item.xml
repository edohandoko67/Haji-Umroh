    <ImageView
        android:id="@+id/contentImg2"
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/content_large" />
    <ImageView
        android:id="@+id/contentImg3"
        android:layout_width="175dp"
        android:layout_height="200dp"
